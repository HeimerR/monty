int main(int argc, char *argv[])
{
	char *content = NULL;
	int file;
	ssize_t read_monty = 1;

	if (argc != 2)
	{
		printf("USAGE: monty file\n");
		exit(EXIT_FAILURE);
	}
	file = open(argv[1], O_RDONLY);
	if (file == -1)
	{
		printf("Error: Can't open file %s\n", argv[1]);
		exit(EXIT_FAILURE);
	}
	while (read_monty > 0)
	{
		read_monty = getstdin(&content, file);
		printf("%s", content);
		free(content);
	}
	free(content);
return (0);
}
